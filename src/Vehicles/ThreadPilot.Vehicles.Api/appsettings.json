{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Security": {
    "Enabled": true,
    "Authority": "https://login.example.com/",
    "Audience": "api://vehicles"
  },
  "StubVehicle": {
    "TimeoutDelayMs": 2000,
    "SlowDelayMs": 1000,
    "Scenarios": {
      "ABC123": { "Type": "Success" },
      "XYZ789": { "Type": "NotFound" },
      "ERR123": { "Type": "Error", "ErrorMessage": "Simulated error from external vehicle system" },
      "TMO123": { "Type": "Timeout" },
      "SLO123": { "Type": "Slow" }
    }
  },
  "OpenTelemetry": {
    "Exporter": "console"
  },
  "AllowedHosts": "*"
}
